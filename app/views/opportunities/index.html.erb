<div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_tag(opportunities_path, method: :get ) do %>
        <%= label_tag(:q, "Search") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search Opportunities", class: "btn btn-primary") %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1>Browse Opportunities</h1>
  <% @opportunities.each do |opportunity| %>
      <div class="result">
        <%= link_to opportunity.headline, opportunity_path(opportunity), :class=>"text" %>
      </div>
  <% end %>
  </div>
</div>