<%= simple_form_for @nonprofit do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if @nonprofit.name? %>
          <h2>Edit your Nonprofit</h2>
        <% else %>
          <h2>Add your Nonprofit</h2>
        <% end %>
      </div>
        <hr>
        <p>Tell us about your nonprofit. The more information you can share the better. Developers want to know who you are and what you do that makes a difference.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-inputs form-box">
        <%= f.input :name %>
        <%= f.input :ein_num, label: 'EIN number' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <%= f.input :city, label: 'City/town' %>
    </div>
    <div class="col-md-2">
      <%= f.input :state, collection: State::STATES, include_blank: 'Select...',required: true, label: "State", input_html: { class: "chosen-select" } %>
    </div>
  </div>

   <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :mission, label:'Mission' %>
    </div>
  </div>

   <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :vision, label:'Vision' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :description_mission, label:'Description' %>
    </div>
  </div>


  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <%= f.input :cause, collection: Cause::CAUSES, include_blank: 'Select...',required: true, label: "Cause area", input_html: { class: "chosen-select" } %>
    </div>
    <div class="col-md-2">
      <%= f.input :date_founded, label: 'Date founded' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <%= f.input :phone_number %>
    </div>
    <div class="col-md-2">
      <%= f.input :fax_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :street_address %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :street_address_2 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-4">
        <%= f.input :zipcode %>
    </div>
    <div class="col-md-2">
        <%= f.input :email_address %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :website_string, label: 'Website' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.input :image, label: 'Upload an image' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <div class="form-actions">
      <%= f.button :submit, class: 'btn-primary' %>
      <%= link_to "Cancel", :back, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
<% end %>

  <% content_for :extra_footer do %>
  <script type="text/javascript">
     $(document).ready(function(){
      $('.datepicker').datepicker({
        format: 'yyyy-MM-dd'
      });
    })
    $(".chosen-select").chosen()
  </script>
<% end %>