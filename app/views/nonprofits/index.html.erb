<div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_tag(nonprofits_path, method: :get ) do %>
        <%= label_tag(:q, "Search") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search Nonprofits", class: "btn btn-primary") %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Browse Nonprofits</h1>
    <%= paginate @nonprofits %>
<% @nonprofits.each do |nonprofit| %>
      <div class="result">
        <%= link_to nonprofit.name, nonprofit_path(nonprofit), :class=>"text" %>
      </div>
  <% end %>
  </div>
</div>