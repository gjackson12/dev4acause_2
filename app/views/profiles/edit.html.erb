<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Update Profile</h2>
<%= simple_form_for @profile , url:profile_path(@profile) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :city, label: "City/town" %>
  <%= f.input :state, collection: State::STATES, include_blank: 'Select...',required: true, label: "State", input_html: { class: "chosen-select" } %>
  <%= f.input :zipcode %>
  <%= f.input :about_me %>
  <%= f.input :current_company %>
  <%= f.button :submit, 'Update Profile' %>
<% end %> 
  </div>
</div>

<% content_for :extra_footer do %>
  <script type="text/javascript">
    $(document).ready(function(){
      $('.datepicker').datepicker({
        format: 'yyyy-MM-dd'
      });
    })

    $(".chosen-select").chosen()
  </script>
<% end %>