<div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form class="form-search">
          <div class="input-group">
              <input type="text" class="form-control " placeholder="Enter search terms">
              <span class="input-group-btn">
                  <button type="submit" class="btn btn-search">Search</button>
              </span>
          </div>
      </form>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Browse People</h1>
    <%= paginate @profiles %>
<% @profiles.each do |profile| %>
      <div class="result">
        <div class="pull-right">
          <%= "#{profile.city}, #{profile.state}"  %>
        </div>
        <%= link_to image_tag(gravatar_url(profile,'s50')), profile_path(profile) %>
        <%= link_to "#{profile.first_name} #{profile.last_name}", profile_path(profile), :class=>"text" %>
        <% if profile.skills.present? %>
          <% profile.skills.each do |skill| %>
            <%= skill.name %>
          <% end %>
        <%- end -%>
      </div>
  <% end %>
  </div>
</div>