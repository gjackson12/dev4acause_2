<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name) ) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <h2>Sign up</h2>
      </div>
      <div class="form-inputs">
        <%= f.input :email, :required => true, :autofocus => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, label: 'Verify password', :required => true %>
        <%= f.input :first_name, :required => true %>
        <%= f.input :last_name, :required => true %>
        <%= f.input :city, label: 'City/town', :required => true  %>
        <%= f.input :state, collection: State::STATES, include_blank: 'Select...',required: true, label: "State", input_html: { class: "chosen-select" } %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <%= f.button :submit, "Sign up", class: 'btn-primary btn-lg' %>
      </div>
    </div>
  </div>
<% end %>

<div class="text-center">
  <%= link_to image_tag("fb_login.png"), user_omniauth_authorize_path(:facebook) %>
</div>

<% content_for :extra_footer do %>
  <script type="text/javascript">
    $(".chosen-select").chosen()
  </script>
<% end %> 